    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Smooth squircle background with vibrant gradient -->
    <path android:fillType="nonZero"
        android:pathData="M20,8 h68 a12,12 0 0 1 12,12 v68 a12,12 0 0 1 -12,12 h-68 a12,12 0 0 1 -12,-12 v-68 a12,12 0 0 1 12,-12 z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="8" android:startY="8"
                android:endX="100" android:endY="100">
                <item android:offset="0.0" android:color="#FF7C3AED"/>  <!-- violet -->
                <item android:offset="0.45" android:color="#FF2563EB"/> <!-- blue -->
                <item android:offset="1.0" android:color="#FF06B6D4"/>  <!-- cyan -->
            </gradient>
        </aapt:attr>
    </path>

    <!-- Soft inner glow -->
    <path android:fillType="evenOdd"
        android:pathData="M18,6 h72 a14,14 0 0 1 14,14 v72 a14,14 0 0 1 -14,14 h-72 a14,14 0 0 1 -14,-14 v-72 a14,14 0 0 1 14,-14 z
