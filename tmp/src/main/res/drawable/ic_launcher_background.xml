        <aapt:attr name="android:fillColor">
            <gradient
                android:type="radial"
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="52">
                <item android:offset="0.0" android:color="#2AFFFFFF"/>
                <item android:offset="1.0" android:color="#00FFFFFF"/>
            </gradient>
        </aapt:attr>
    </path>
</vector>